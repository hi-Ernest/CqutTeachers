<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>/resourse/login.html</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>edu.cqut.hr.servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeacherServlet</servlet-name>
        <servlet-class>edu.cqut.hr.servlet.TeacherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherServlet</servlet-name>
        <url-pattern>/TeacherServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddTeacher</servlet-name>
        <servlet-class>edu.cqut.hr.servlet.AddTeacher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTeacher</servlet-name>
        <url-pattern>/AddTeacher</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteTeacher</servlet-name>
        <servlet-class>edu.cqut.hr.servlet.DeleteTeacher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteTeacher</servlet-name>
        <url-pattern>/DeleteTeacher</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateTeacher</servlet-name>
        <servlet-class>edu.cqut.hr.servlet.UpdateTeacher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateTeacher</servlet-name>
        <url-pattern>/UpdateTeacher</url-pattern>
    </servlet-mapping>


</web-app>